mixin NavigationCategory(icon, vector1, title1, vector2, title2)
	.flex.px-3.py-3
		i.text-16px.text-t6.font-normal(class= icon)
		span.text-16px.text-t6.font-normal.ml-2= vector1
		p.text-14px.text-t6.font-normal.ml-2= title1
		span.text-16px.text-t6.font-normal.ml-2= vector2
		p.text-14px.text-t6.font-normal.ml-2=title2

//- list category product title home-3
mixin ListCateProductHome-3(title)
	li.list-none.font-medium.text-14px.text-t0.mr-7.mt-3(class="hover:text-primary")
		button.list-cate-space
		a(href="#")= title

//- list product home-3
mixin ListProductHome-3(image, header, btn)
	div(class="xs:col-span-6 sm:col-span-6 md:col-span-4 lg:col-span-3")
		.flex.flex-col.h-full.border-product.justify-between
			.product-img
				img(src= image class=" text-center w-full h-full object-cover")
			.flex.flex-col.h-full.justify-between
				h2.font-bold.text-18px.text-t3.text-center.mb-10.mt-5= header
				.text-center
					button.btn-view.mb-7.mt-auto= btn

mixin ListProductNewHome-3(news, image, header, btn)
	div(class="xs:col-span-6 sm:col-span-6 md:col-span-4 lg:col-span-3")
		.flex.flex-col.h-full.border-product.justify-between
			.relative.top-7
				span.title-new.uppercase= news
			.product-img
				img(src= image class=" text-center w-full h-full object-cover")
			.flex.flex-col.h-full.justify-between
				h2.font-bold.text-18px.text-t3.text-center.mb-10.mt-5= header
				.text-center
					button.btn-view.mb-7= btn



//- //- list swiper service related home-6
mixin ListServiceHome-6(image, header, desc, btn)
	.swiper-slide 
		.flex.flex-row.h-full
			.flex.w-full
				img.w-full.h-full.object-covert(src= image)
			.bg-t1.flex.flex-col.w-full
				.px-10.py-5
					h4.font-bold.text-18px.text-t2.mb-5= header
					p.font-normal.text-sm.text-t2.mb-5= desc
					div
						button.btn-view-more.uppercase= btn



//- list manufacturing home-7
mixin ListManufacturingHome-7(image, header, desc, btn, icon)
	div(class="xs:col-span-6 sm:col-span-6 md:col-span-4 lg:col-span-3")
		div
			img.w-full.h-full(src= image)
		.bg-t2
