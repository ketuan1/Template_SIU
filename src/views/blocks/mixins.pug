		.text-center.mt-7
			a(href='#').inline-flex.items-center.px-4.py-2.ml-3.text-t2.bg-primary.border.rounded-5px= number1
			a(href='#').inline-flex.items-center.px-4.py-2.ml-3.border.rounded-5px.text-t3= number2
			a(href='#').inline-flex.items-center.px-4.py-2.ml-3.border.rounded-5px.text-t3= number3