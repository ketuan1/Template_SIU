			.flex.mt-auto 
				button.font-bold.text-14px.text-t3.uppercase= btn
				i.font-light.text-xl.text-primary.ml-3(class= icon)


//- list new home-9
mixin ListNewHome-9(image, image_calender, title_calender, header, desc, btn, icon)
	.grid.h-full(class="xs:col-span-6 sm:col-span-6 md:col-span-4 lg:col-span-4")
			img.w-full.h-full.object-cover(src= image)
			.calender
				img.calender-img(src= image_calender)
				span.calender-title= title_calender
			.flex.flex-col.mt-auto.px-8.py-5.bg-f5
				h2.font-bold.text-xl.text-t3= header
				p.font-normal.text-14px.text-t6.break-all.mt-5= desc
				.flex.mt-5
					button.font-bold.text-14px.text-t3.uppercase= btn
					i.font-light.text-xl.text-primary.ml-3(class= icon)
